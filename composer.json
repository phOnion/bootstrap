{
    "name": "onion/bootstrap",
    "description": "Onion framework application skeleton",
    "type": "project",
    "require": {
        "php": "^7.2",
        "roave/security-advisories": "dev-master",
        "onion/interfaces": "^2.1",
        "onion/framework": "^2.2",
        "onion/rest": "^2.0",
        "wikimedia/composer-merge-plugin": "^1.4"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-0": {
            "Development\\": "src/"
        }
    },
    "require-dev": {
        "onion/tool": "^0.4.0-alpha+0231"
    },
    "extra": {
        "merge-plugin": {
            "include": [
                "modules/*/*.phar.composer.json"
            ]
        }
    }
}
